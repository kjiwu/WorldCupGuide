<ResourceDictionary xmlns="http://schemas.microsoft.com/client/2007"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="BackgroundColor">Black</Color>

    <SolidColorBrush x:Key="AppBackgroundBrush"
                     Color="{StaticResource BackgroundColor}"/>

    <SolidColorBrush x:Key="TitleForeground" 
                     Color="White"/>

    <SolidColorBrush x:Key="GroupBackgroundBrush"
                     Color="#FF86D825" />

    <SolidColorBrush x:Key="MatchItemBackgroundBrush"
                     Color="#FF86D825" />

    <SolidColorBrush x:Key="MatchItemTextBackgroundBrush"
                     Color="#FF50C32E" />

    <ImageBrush x:Key="BackgroundBrush" 
                ImageSource="/Assets/Images/Background.jpg"
                Stretch="UniformToFill"/>

    <SolidColorBrush x:Key="PopupTextBrush" 
                     Color="White"/>

    <Style x:Key="GroupTitleStyle"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="25" />
        <Setter Property="FontWeight"
                Value="Medium" />
    </Style>

</ResourceDictionary>